# Supabase Configuration
# Get these values from your Supabase project settings
VITE_SUPABASE_URL=your_project_url
VITE_SUPABASE_ANON_KEY=your_anon_key

# Optional: Analytics Configuration
# Enable/disable specific analytics features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional: Feature Flags
# Control feature availability
VITE_ENABLE_LOCATION_FEATURES=true
VITE_ENABLE_MOOD_FEATURES=true
VITE_ENABLE_REACTIONS=true
VITE_ENABLE_ACHIEVEMENTS=true

# Optional: Performance Settings
# Fine-tune application performance
VITE_MAX_CONFESSIONS_PER_PAGE=20
VITE_REALTIME_EVENTS_PER_SECOND=10
VITE_CACHE_DURATION_MINUTES=5

# Optional: Content Settings
# Configure content-related features
VITE_MAX_CONFESSION_LENGTH=500
VITE_ENABLE_CONTENT_FILTERING=true
VITE_ENABLE_RATE_LIMITING=true

# Optional: UI Settings
# Customize UI behavior
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_HAPTIC_FEEDBACK=true

# Note: This is an example file. Create a .env.local file with your actual values.
# NEVER commit your actual .env.local file to version control!